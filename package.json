{
  "name": "node-ts-template",
  "version": "1.0.0",
  "description": "Quickly initialize the NodeJS and TS project",
  "engines": {
    "node": ">= 20.9 < 21"
  },
  "main": "index.ts",
  "scripts": {
    "prepare-commit-msg": "husky run prepare-commit-msg",
    "commit-msg": "husky run commit-msg",
    "pre-commit": "husky run pre-commit",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "clean": "rimraf coverage build tmp && node -e \"var { rmdirSync, existsSync } = require('fs'), path = require('path'); ['./.nyc_output', './coverage', './dist'].forEach(fPath => {if (existsSync(path.join(__dirname, fPath))) rmdirSync(path.join(__dirname, fPath), { recursive: true })}); process.exit(0);\"",
    "clean:all": "npm run clean && (rm -r ./node_modules || true)",
    "prebuild": "npm run lint",
    "changelog": "conventional-changelog -p angular -u",
    "changelog:update": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "cover": "nyc npm run test",
    "cover:check": "nyc --check-coverage --reporter=lcov npm run test",
    "preversion": "npm run build && npm run cover:check",
    "build:clean": "npm run clean && npm run lint && tsc",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint . --ext .ts --ext .mts --fix src/**/*.ts",
    "prettier": "prettier --config .prettierrc --write .",
    "postversion": "git push && git push --tags",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "serve": "nodemon ./src/index.ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "sitka": "^1.1.1"
  },
  "devDependencies": {
    "@types/jest": "~29.5",
    "@types/node": "~20",
    "@typescript-eslint/eslint-plugin": "~7.6",
    "@typescript-eslint/parser": "~7.6",
    "conventional-changelog-cli": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "~8.56",
    "eslint-config-prettier": "~9.1",
    "eslint-plugin-jest": "~28.2",
    "husky": "^8.0.3",
    "jest": "~29.7",
    "lint-staged": "^13.3.0",
    "nodemon": "^3.1.0",
    "nyc": "^15.1.0",
    "prettier": "~3.2",
    "rimraf": "~5.0",
    "ts-api-utils": "~1.3",
    "ts-jest": "~29.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.4"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "template"
  ],
  "author": "Matthew Ngo <ngonhuthanhtrung1409@gmail.com>",
  "license": "MIT",
  "volta": {
    "node": "20.12.2"
  }
}
